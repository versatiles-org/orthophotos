{
  "tasks": {
    "format": "deno fmt",
    "server-prepare": "deno run -A --env-file=config.env src/server-prepare.ts",
    "server-start": "./server.sh",
    "server": "deno task server-prepare && deno task server-start",
    "status-check": "deno run -A src/status-check.ts"
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/yaml": "jsr:@std/yaml@^1.0.9"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 3,
    "useTabs": true,
    "semiColons": true,
    "proseWrap": "preserve",
    "singleQuote": true,
    "trailingCommas": "onlyMultiLine",
    "include": [
      "src/**/*.ts"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  }
}